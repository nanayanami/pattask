<%# 完了 %>

<div class="cover">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5 w-100 justify-content-center">
      <div class="col-12 col-md-8">
        <h1>新規チーム作成</h1>
        <%= form_with model: @team, local: true do |f| %>

          <% if @team.errors.any? %>
            <div class="card text-center text-white bg-danger mt-3">
              <%= @team.errors.count %>件のエラーが発生しました
              <% @team.errors.full_messages.each do |message| %>
                <%= message %>
              <% end %>
            </div>
          <% end %>

          <h4>チーム名</h4>
          <div class="d-flex align-items-center gap-2 w-100 mb-3">
            <%= f.text_field :name, class: "form-control flex-grow-1" %>
            <%= f.submit "チームを作成する", class: "btn btn-light border" %><br>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

