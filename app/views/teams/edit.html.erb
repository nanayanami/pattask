<%# 完了　更新したら投稿一覧に行く%>

<div class="cover">
  <div class="container d-flex flex-column align-items-center">
    <div class="row mt-5 w-100 justify-content-center">
      <div class="col-12 col-md-8">
        <h1>チーム名変更</h1>
        <%= form_with model: @team, local: true do |f| %>
          <h4>チーム名</h4>
          <div class="d-flex align-items-center gap-2 w-100 mb-3">
            <%= f.text_field :name, class: "form-control flex-grow-1" %>
            <%= f.submit "更新する", class: "btn btn-light border" %><br>
          </div>
          <div class="mt-3 w-100 text-start">
          <%= link_to "チーム一覧に戻る", teams_path, class: "btn btn-primary" %><br>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

