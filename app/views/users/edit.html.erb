<div class="users cover">
  <div class="container d-flex flex-column align-items-center">
    <div class="row-mt5">
       <h1 class="posts-title"> プロフィール編集</h1> 
    </div>
    <div class="row mt-5">
      <%=form_with model: @user, local: true do |f| %>
        <div class="form-group mb-3">
          <label class="form-label">名前</label>
          <%= f.text_field :name,autofocus: true,id:"inputName", class: "form-control" %>
        </div>
        <div class="form-group ">
          <label class="form-label">プロフィール画像</label><br>
          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: '100x100', class: "mb-3 profile-img" %><br>
          <% else %>
            <%= image_tag asset_path("no_image.svg"), size: '100x100', class: "mb-3 profile-img" %><br>
          <% end %>
          <%= f.file_field :profile_image %>
        </div>
        <div class="form-group">
          <label class="form-label">プロフィール</label>
          <%= f.text_area :profile, class: "form-control mb-3" %>
        </div>
          <%= f.submit '保存する', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>