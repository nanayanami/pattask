<!DOCTYPE html>
<html>
  <head>
    <title>Pattask</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark px-0 app-header">
        <!-- ロゴ -->
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag "Pattask-logo-transparent.png", class: "header-logo", alt: "Pattask" %>
        <% end %>

        <!-- スマホ用ハンバーガー -->
        <button class="navbar-toggler" type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarNav"
                aria-controls="navbarNav"
                aria-expanded="false"
                aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <!-- メニュー -->
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item"><%= link_to "トップ", root_path, class: "text-white nav-link" %></li>
            <li class="nav-item"><%= link_to "チーム", teams_path, class: "text-white nav-link" %></li>
            <li class="nav-item"><%= link_to "下書き", confirm_posts_path, class: "text-white nav-link" %></li>
            <li class="nav-item"><%= link_to "ユーザー一覧", users_path, class: "text-white nav-link" %></li>
            <li class="nav-item"><%= link_to "マイページ", user_path(current_user.id), class: "text-white nav-link" %></li>
            <li class="nav-item"><%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white nav-link" %></li>
          </ul>
        </div>
      </nav>
    <% end %>
    <div class="page-content">
      <%= yield %>
    </div>
  </body>
</html>
