<%# 完了 新規投稿で投稿一覧に行く%>

<div class="cover">
  <div class="container p-form d-flex flex-column">
    <div class="row mt-5 p-row">
      <div class="p-panel">
        <h1 class="p-h1">新規投稿</h1>
      </div>


      <% if @post.errors.any? %>
        <div class="card text-center text-white bg-danger mt-3">
          <%= @post.errors.count %>件のエラーが発生しました
          <% @post.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        </div>
      <% end %>

    </div>
    <div class="row mt-4 p-row">
      <div class="p-panel">
        <%= form_with model: [@team, @category, @post], local: true do |f| %>
          <div class="form-group mb-3">
            <label class="form-label">タイトル</label>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group mb-3 rich-text-group">
            <label class="form-label">内容</label>
            <%= f.rich_text_area :content %>
          </div>
          <div class="form-group mb-3">
            <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-25 mb-3"} %>
            <%= f.submit "投稿する", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>







