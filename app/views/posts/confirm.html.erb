<div class="posts cover">
  <h1 class="posts-title">下書き一覧</h1>

  <% @posts.each do |post| %>
    <div class="post-item">
      <div class="d-flex justify-content-between align-items-center post-head">
        <h3 class="mb-0 post-title">
          <%= link_to post.title, team_category_post_path(post.team, post.category, post) %>
        </h3>
        <div class="d-flex gap-2 post-actions">
          <%= link_to "編集", edit_team_category_post_path(post.team, post.category, post), class: "btn btn-success btn-sm btn-edit" %>
          <%= link_to "削除", team_category_post_path(post.team, post.category, post),
                      data: { turbo_method: :delete, turbo_confirm: "削除してよろしいですか？" },
                      class: "btn btn-danger btn-sm btn-del" %>
        </div>
      </div>

      <div class="d-flex flex-wrap gap-2">
        <p class="caption mb-0"><%= post.user.name %></p>
        <p class="caption mb-0">チーム: <%= post.team&.name %></p>
        <p class="caption mb-0">カテゴリー: <%= post.category&.name %></p>
      </div>
  
    </div>
  <% end %>

  <div class="pagination-wrapper">
    <%= paginate @posts %>
  </div>
</div>